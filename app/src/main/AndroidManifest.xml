<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.liking.treadmill"
          android:versionCode="1"
          android:versionName="1.0.0">

    <application
        android:name=".app.LikingThreadMillApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/LikingThreadmillTheme">
        <activity
            android:name=".activity.RunActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.HOME"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.MONKEY"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name=".socket.SocketService"/>
        <service android:name=".service.ApkDownloadService"/>
        <!--更新界面-->
        <activity
            android:name=".activity.UpdateActivity"
            android:launchMode="singleTask"
            android:screenOrientation="landscape"/>
        <!--待机页面-->
        <activity
            android:name=".activity.AwaitActionActivity"
            android:screenOrientation="landscape"/>
        <!--网络服务-->
        <service android:name=".service.NetworkStateService"/>
    </application>

</manifest>