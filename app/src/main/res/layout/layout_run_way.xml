<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.liking.treadmill.widget.RunwayView
        android:id="@+id/run_way_view"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/run_way_view"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/run_way_left_FrameLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_weight="1.0"/>

        <com.aaron.android.framework.library.imageloader.HImageView
            android:id="@+id/imageview_adv"
            android:layout_width="720dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            fresco:failureImage="@drawable/run_adv_bg"
            fresco:failureImageScaleType="fitCenter"
            fresco:placeholderImage="@drawable/run_adv_bg"
            fresco:placeholderImageScaleType="fitCenter"/>

        <FrameLayout
            android:id="@+id/run_way_right_FrameLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_weight="1.0"/>

    </LinearLayout>

</RelativeLayout>