<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        android:fitsSystemWindows="true"
        android:minHeight="@dimen/toolbar_height"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_height">

            <ImageView
                android:id="@+id/icon_imageView"
                android:layout_width="132dp"
                android:layout_height="17dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_24dp"
                android:background="@drawable/main_icon"
                android:scaleType="centerInside"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_20sp"/>

            <TextView
                android:id="@+id/time_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/spacing_12dp"
                android:text="11:33"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_18sp"/>

            <ImageView
                android:id="@+id/wifi_imageView"
                android:layout_width="@dimen/main_toolbar_icon_size"
                android:layout_height="@dimen/main_toolbar_icon_size"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/spacing_8dp"
                android:layout_toLeftOf="@id/time_textView"
                android:src="@drawable/main_wifi"/>

            <ImageView
                android:id="@+id/fan_imageView"
                android:layout_width="@dimen/main_toolbar_icon_size"
                android:layout_height="@dimen/main_toolbar_icon_size"
                android:layout_centerVertical="true"
                android:layout_marginRight="-8dp"
                android:layout_toLeftOf="@id/wifi_imageView"
                android:src="@drawable/main_fan"/>

            <ImageView
                android:id="@+id/cooldown_imageView"
                android:layout_width="@dimen/main_toolbar_icon_size"
                android:layout_height="@dimen/main_toolbar_icon_size"
                android:layout_centerVertical="true"
                android:layout_marginRight="-8dp"
                android:layout_toLeftOf="@id/fan_imageView"
                android:src="@drawable/main_cooldown"/>


        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>