<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.liking.treadmill.activity.RunActivity">

    <com.aaron.android.framework.library.imageloader.HImageView xmlns:android="http://schemas.android.com/apk/res/android"
                                                                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                                                                android:id="@+id/left_ad_imageView"
                                                                android:layout_width="@dimen/run_ad_image_size"
                                                                android:layout_height="match_parent"
                                                                fresco:actualImageScaleType="centerCrop"
                                                                fresco:fadeDuration="300"
                                                                fresco:failureImageScaleType="centerInside"
                                                                fresco:placeholderImage="@color/list_item_selected"
                                                                fresco:placeholderImageScaleType="fitCenter"
                                                                fresco:progressBarAutoRotateInterval="1000"
                                                                fresco:progressBarImageScaleType="centerInside"
                                                                fresco:retryImageScaleType="centerCrop"
        />

    <RelativeLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/run_bg">

        <FrameLayout
            android:id="@+id/layout_dashboard"
            android:layout_width="385dp"
            android:layout_height="385dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/fast_11"/>

            <ImageView
                android:id="@+id/dashboard_imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/dashboard_anim_backgroud"/>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_toRightOf="@id/layout_dashboard"
            android:text="快走"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_dashboard"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="慢跑"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_toLeftOf="@+id/layout_dashboard"
            android:text="不要命跑"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_alignParentBottom="true"
            android:background="#07ffffff"
            android:orientation="horizontal">

            <include
                layout="@layout/run_info_cell"
                android:layout_height="match_parent"
                android:layout_width="0px"
                android:id="@+id/cell_grade"
                android:layout_weight="1"/>
            <include
                layout="@layout/run_info_cell"
                android:layout_height="match_parent"
                android:layout_width="0px"
                android:id="@+id/cell_speed"
                android:layout_weight="1"/>
            <include
                layout="@layout/run_info_cell"
                android:layout_height="match_parent"
                android:layout_width="0px"
                android:id="@+id/cell_hot"
                android:layout_weight="1"/>
            <include
                layout="@layout/run_info_cell"
                android:layout_height="match_parent"
                android:layout_width="0px"
                android:id="@+id/cell_heart_rate"
                android:layout_weight="1"/>
        </LinearLayout>
    </RelativeLayout>

    <com.aaron.android.framework.library.imageloader.HImageView xmlns:android="http://schemas.android.com/apk/res/android"
                                                                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                                                                android:id="@+id/right_ad_imageView"
                                                                android:layout_width="@dimen/run_ad_image_size"
                                                                android:layout_height="match_parent"
                                                                fresco:actualImageScaleType="centerCrop"
                                                                fresco:fadeDuration="300"
                                                                fresco:failureImageScaleType="centerInside"
                                                                fresco:placeholderImage="@color/list_item_selected"
                                                                fresco:placeholderImageScaleType="fitCenter"
                                                                fresco:progressBarAutoRotateInterval="1000"
                                                                fresco:progressBarImageScaleType="centerInside"
                                                                fresco:retryImageScaleType="centerCrop"
        />
</LinearLayout>
