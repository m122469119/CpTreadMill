<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/spacing_24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通过手机扫码,安全登录"
            android:textColor="@color/c596167"
            android:textSize="@dimen/textsize_20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="进行操房绑定与设置"
            android:textColor="@color/c596167"
            android:textSize="@dimen/textsize_18sp"/>

        <com.aaron.android.framework.library.imageloader.HImageView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/qrcode_imageView"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginBottom="@dimen/spacing_12dp"
            android:layout_marginTop="@dimen/spacing_12dp"
            fresco:failureImage="@mipmap/bg_private_teacher_default"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@mipmap/bg_private_teacher_default"
            fresco:placeholderImageScaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@mipmap/scanner"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_8dp"
                android:text="打开手机微信\n扫一扫登录"
                android:textColor="@color/c596167"
                android:textSize="@dimen/textsize_20sp"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>