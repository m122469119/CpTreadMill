<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/spacing_40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_24dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingTop="@dimen/spacing_24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bind_gym_hint1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/c596167"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/bind_gym_hint2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_4dp"
                android:gravity="center"
                android:textColor="@color/c596167"
                android:textSize="12sp"/>

        </LinearLayout>
        <!--com.aaron.android.framework.library.imageloader.H

            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            fresco:failureImage="@mipmap/bg_private_teacher_default"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@mipmap/bg_private_teacher_default"
            fresco:placeholderImageScaleType="centerCrop"
        -->
        <ImageView
            android:id="@+id/qrcode_imageView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@mipmap/bg_private_teacher_default"
            android:layout_marginBottom="@dimen/spacing_20dp"
            android:layout_marginTop="@dimen/spacing_20dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:background="@drawable/scanner"/>

            <TextView
                android:id="@+id/qrcode_hint3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_8dp"
                android:textColor="@color/c596167"
                android:textSize="@dimen/textsize_12sp"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>