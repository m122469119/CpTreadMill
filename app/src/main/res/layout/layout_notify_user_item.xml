<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:padding="@dimen/spacing_4dp">

    <FrameLayout
        android:layout_weight="1.0"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <com.aaron.android.framework.library.imageloader.HImageView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/notify_user_head_imageView"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_gravity="center_vertical"
            fresco:failureImage="@drawable/icon_head_default_image"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/icon_head_default_image"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true"/>
    </FrameLayout>


    <TextView
        android:id="@+id/notify_user_name"
        android:layout_weight="1.0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="@dimen/spacing_8dp"
        android:text="GGGG"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/c85878e"
        android:textSize="22dp"/>

    <FrameLayout
        android:layout_weight="1.0"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/notify_user_name_sex"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="@dimen/spacing_20dp"
            android:src="@drawable/run_icon_man"/>

    </FrameLayout>

    <TextView
        android:id="@+id/notify_user_name_meetcount"
        android:layout_weight="1.0"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_8dp"
        android:text="234"
        android:textStyle="bold"
        android:textColor="@color/c34c86c"
        android:textSize="26dp"/>

</LinearLayout>