<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="300dp"
             android:layout_height="70dp"
             android:translationX="-300dp"
             android:layout_centerVertical="true"
             android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/spacing_12dp"
        android:layout_marginLeft="@dimen/spacing_24dp"
        android:layout_marginTop="@dimen/spacing_12dp"
        android:background="@color/c34c86c"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_8dp">

        <TextView
            android:id="@+id/follower_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="开跑啦"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <com.aaron.android.framework.library.imageloader.HImageView
        xmlns:fresco="http://schemas.android.com/apk/res-auto"
        android:id="@+id/head_imageView"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_gravity="center_vertical"
        fresco:failureImage="@drawable/icon_head_default_image"
        fresco:failureImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/icon_head_default_image"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true"/>


</FrameLayout>