<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bind_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mode_setting_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_40dp"
            android:gravity="center"
            android:textColor="@color/c85878e"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/mode_setting_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_goalseetting_back"
            android:gravity="center"
            android:padding="100dp"
            android:textColor="@color/c34c86c"
            android:textSize="100sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/goal_select_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="40dp"
            android:textColor="@color/c85878e"
            android:textSize="@dimen/textsize_20sp"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_60dp"
        android:paddingTop="@dimen/spacing_40dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mode_setting_hint1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/c85878e"
                android:textSize="@dimen/textsize_20sp" />

            <TextView
                android:id="@+id/mode_setting_hint1_after"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/c85878e"
                android:textSize="@dimen/textsize_20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/mode_setting_hint2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_16dp"
            android:layout_marginTop="@dimen/spacing_16dp"
            android:gravity="center"
            android:textColor="@color/c85878e"
            android:textSize="@dimen/textsize_20sp" />

        <TextView
            android:id="@+id/mode_setting_hint3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/c85878e"
            android:textSize="@dimen/textsize_20sp" />
    </LinearLayout>

</LinearLayout>