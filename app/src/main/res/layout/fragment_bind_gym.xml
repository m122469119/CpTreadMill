<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bind_gym_step_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bind_gym_hint_step3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center"
                android:text="STEP 2"
                android:textColor="@color/c85878e"
                android:textSize="28sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/bind_gym_hint_bind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:text="绑定场馆"
                android:gravity="center"
                android:textColor="@color/c85878e"
                android:textSize="20sp"/>
        </LinearLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <include
                android:id="@+id/bind_gym_layout_qrcode"
                layout="@layout/layout_qrcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/bind_gym_hint_skip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:gravity="center"
                android:text="@string/bind_gym_success_hint"
                android:textColor="@color/c85878e"
                android:textSize="18sp"/>

        </FrameLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/network_setting_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="80dp"
        android:paddingTop="80dp"
        android:textColor="@color/c85878e"
        android:textSize="@dimen/textsize_20sp"/>

</LinearLayout>