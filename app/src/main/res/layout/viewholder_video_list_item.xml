<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/spacing_8dp"
              android:paddingLeft="@dimen/spacing_8dp"
              android:paddingRight="@dimen/spacing_8dp"
              android:clickable="true"
              android:background="@drawable/video_item_selector"
              android:orientation="vertical">

    <TextView
        android:id="@+id/video_list_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_12dp"
        android:layout_marginRight="@dimen/spacing_12dp"
        android:padding="@dimen/spacing_16dp"
        android:textColor="@color/c84898F"
        android:textSize="@dimen/textsize_24sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginTop="@dimen/spacing_4dp"
        android:layout_marginLeft="@dimen/spacing_12dp"
        android:layout_marginRight="@dimen/spacing_12dp"
        android:background="@color/cB6B7BC"/>
</LinearLayout>