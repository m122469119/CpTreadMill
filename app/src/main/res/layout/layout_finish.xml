<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/run_bg"
                android:orientation="vertical">

    <FrameLayout
        android:id="@+id/run_finish_layout"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp">

        <ImageView
            android:id="@+id/run_finish_ImageView"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:visibility="invisible"
            android:background="@drawable/icon_run_finish"/>

        <FrameLayout
            android:id="@+id/run_progress_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <com.liking.treadmill.widget.ColorfulRingProgressView
                android:id="@+id/colorfulring_progress"
                android:layout_width="256dp"
                android:layout_height="256dp"
                android:padding="@dimen/spacing_12dp"
                app:bgColor="@color/colorfulringprogress_run_progress_bgcolor"
                app:fgColorEnd="@color/colorfulringprogress_fgcolorend"
                app:fgColorStart="@color/colorfulringprogress_fgcolorstart"
                app:startTagImg="@drawable/progress_tag_point"
                app:startAngle="50"
                app:strokeWidth="@dimen/colorfulringprogress_strokewidth"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_8dp">

                <TextView
                    android:id="@+id/run_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="18dp"
                    android:textColor="@color/white"
                    android:text="80%"
                    android:textSize="@dimen/textsize_30sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/this_run_finish_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/run_finish_layout"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="@string/this_run_finish"
        android:textColor="@color/c25ff8c"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/run_time_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/this_run_finish_prompt"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/c7c7c8"
        android:textSize="24sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#50000000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:paddingTop="40dp">

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1.7"/>

            <include
                android:id="@+id/layout_distance"
                layout="@layout/run_info_cell"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <include
                android:id="@+id/layout_user_time"
                layout="@layout/run_info_cell"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1.7"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal"
            android:paddingBottom="40dp"
            android:paddingTop="30dp">

            <include
                android:id="@+id/layout_average_gradient"
                layout="@layout/run_info_cell"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <include
                android:id="@+id/layout_average_speed"
                layout="@layout/run_info_cell"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <include
                android:id="@+id/layout_consume_kcal"
                layout="@layout/run_info_cell"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <include
                android:id="@+id/layout_average_heart_rate"
                layout="@layout/run_info_cell"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>