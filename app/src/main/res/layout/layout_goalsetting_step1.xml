<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/run_bg"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0"
        android:layout_marginLeft="@dimen/spacing_24dp"
        android:layout_marginRight="@dimen/spacing_24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <include
            android:id="@+id/step1_mode_runtime"
            layout="@layout/item_goal_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_4dp"
            android:layout_weight="1.0"/>

        <include
            android:id="@+id/step1_mode_kilometre"
            layout="@layout/item_goal_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_4dp"
            android:layout_weight="1.0"/>

        <include
            android:id="@+id/step1_mode_kcal"
            layout="@layout/item_goal_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_4dp"
            android:layout_weight="1.0"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#381d3e"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="80dp"
        android:paddingTop="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/goalsetting_step1_hint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="点击"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_30sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/key_next"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择设定目标类型&#160;&#160;&#160;&#160;&#160;再点击"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_30sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/key_mode"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="两次确认选定"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_30sp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/spacing_16dp"
            android:padding="@dimen/spacing_4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点击"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_30sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/spacing_40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/key_back"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="返回上一页"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_30sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
