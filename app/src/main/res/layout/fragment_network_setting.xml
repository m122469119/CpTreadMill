<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/run_bg"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/network_setting_step_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="STEP 1"
                android:textColor="@color/white"
                android:textSize="24sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="配置你的网络"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="180dp"
            android:layout_marginLeft="300dp"
            android:layout_marginRight="300dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/view_running_machine"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/icon_running_machine"/>

            <ImageView
                android:id="@+id/view_network"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_network"/>

            <View
                android:id="@+id/network_setting_line"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/view_network"
                android:layout_toRightOf="@+id/network_ImageView"
                android:background="@drawable/shape_imagniary_line"/>

            <ImageView
                android:id="@+id/network_ImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_connect_success"/>

            <View
                android:id="@+id/network_setting_line2"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/network_ImageView"
                android:layout_toRightOf="@+id/view_running_machine"
                android:background="@drawable/shape_imagniary_line"/>

            <TextView
                android:id="@+id/network_connect_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/network_ImageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:text="网络已连接"
                android:textColor="@color/white"
                android:textSize="24sp"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_nonnet_operation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="@dimen/spacing_8dp"
                android:textSize="@dimen/textsize_20sp"
                android:text="@string/threadmill_network_setting_non_net_operate1_txt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/spacing_8dp"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_20sp"
                android:text="@string/threadmill_network_setting_non_net_operate2_txt"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/c179B9B9B"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="80dp"
        android:paddingTop="80dp">
        <TextView
            android:id="@+id/network_setting_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_20sp"/>
    </LinearLayout>
</LinearLayout>