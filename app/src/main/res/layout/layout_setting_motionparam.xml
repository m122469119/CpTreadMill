<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:gravity="center"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:text="@string/threadmill_motion_param_maxtime_txt"
                android:padding="@dimen/spacing_8dp"
                android:textColor="@color/text_color_grey"
                android:textSize="30sp"/>

        <TextView
                android:id="@+id/motion_param_value_TextView"
                android:layout_marginTop="50dp"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/shape_goalseetting_back"
                android:textColor="@color/text_color_green"
                android:textSize="100sp"/>

        <TextView
                android:id="@+id/text_please"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center"
                android:padding="@dimen/spacing_8dp"
                android:textSize="20sp"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="80dp"
            android:paddingTop="80dp">

        <TextView
                android:id="@+id/motion_param_hint1_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_16dp"
                android:layout_marginTop="@dimen/spacing_16dp"
                android:gravity="center"
                android:textColor="@color/c85878e"
                android:textSize="@dimen/textsize_20sp"/>

        <TextView
                android:id="@+id/motion_param_hint2_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/c85878e"
                android:textSize="@dimen/textsize_20sp"/>

    </LinearLayout>

</LinearLayout>