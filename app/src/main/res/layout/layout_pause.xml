<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/run_bg"
              android:orientation="vertical">

    <TextView
        android:id="@+id/count_down_TextView"
        android:layout_width="420dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/icon_pause_time"
        android:gravity="center"
        android:text="60s"
        android:textColor="@color/white"
        android:textSize="80sp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_button_back"
                android:gravity="center"
                android:text="继续"
                android:textColor="@color/white"
                android:textSize="28sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/go_on_left_prompt_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="30dp"
                    android:textColor="@color/white"
                    android:textSize="26sp"/>

                <TextView
                    android:id="@+id/go_on_prompt_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/go_on_left_prompt_TextView"
                    android:textColor="@color/c25ff8c"
                    android:textSize="26sp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/go_on_right_prompt_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/go_on_prompt_TextView"
                    android:textColor="@color/white"
                    android:textSize="26sp"/>

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="120dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_button_back"
                android:gravity="center"
                android:text="结束"
                android:textColor="@color/white"
                android:textSize="28sp"/>

            <TextView
                android:id="@+id/stop_prompt_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="26sp"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
